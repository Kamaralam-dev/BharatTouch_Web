@model DataAccess.Models.PaymentModel
    @{
        var picPath = "/uploads/images/paymentscreenshot/" + Model.PaymentId + ".jpg";
        var isExitPic = false;
        try
        {
            isExitPic =System.IO.File.Exists(Server.MapPath("~" + picPath));
        }
        catch (Exception ex) { }
}


<div class="container">
    <div class="row">
        <div class="d-flex justify-content-between mb-2">
            <span class="text-muted">Payment Status</span>
            <span class="fw-bold">@Model.PaymentStatus</span>
        </div>
        <div class="d-flex justify-content-between mb-2">
            <span class="text-muted">Payment Amount</span>
            <span class="fw-bold">Rs. @Model.PaymentAmount</span>
        </div>
        <div class="d-flex justify-content-between mb-2">
            <span class="text-muted">Currency</span>
            <span class="fw-bold">@Model.Currency</span>
        </div>
        <div class="d-flex justify-content-between mb-2">
            <span class="text-muted">Payment Date</span>
            <span class="fw-bold">@string.Format("{0:" + BharatTouch.CommonHelper.DateTimeFormatter.Style1 + "}", Model.PaymentDate)</span>
        </div>
        @if (isExitPic)
        {
            <hr />
            <div class="container">
                <img src="@picPath" style="width: 300px; height: auto;"/>
            </div>
        }
    </div>
</div>