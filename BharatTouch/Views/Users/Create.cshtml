@model DataAccess.Models.UserModel
@using DataAccess
@{
    Layout = null;
    ViewBag.Title = "Sign Up";
}

<!doctype html>
<html class="fixed">
<head>
    <!-- Vendor CSS -->
    <!--====== Required meta tags ======-->
    <link rel="shortcut icon" href="Theme/images/favicon.png" type="image/png">
    <!--====== Title ======-->
    <title>@ViewBag.Title  | Avi E-Card</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- css -->

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <style type="text/css">
        .main-panel {
            width: 100% !important;
        }
    </style>

</head>
<body>
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-center auth px-0">
                <div class="row w-100 mx-0">
                    <div class="col-lg-4 mx-auto">
                        <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                            <div class="brand-logo">
                                <img src="~/Skydash/images/logo.svg" alt="logo">
                            </div>
                            <h4>New here?</h4>
                            <h6 class="font-weight-light">Signing up is easy. It only takes a few steps</h6>
                            @using (Html.BeginForm("Create", "Users", FormMethod.Post, new { id = "CreateUserForm", @class = "pt-3" }))
                            {
                                <div class="form-group">
                                    @Html.TextBoxFor(t => t.FirstName, new { @class = "form-control form-control-lg", @placeholder = "First Name" })
                                </div>
                                <div class="form-group">
                                    @Html.TextBoxFor(t => t.LastName, new { @class = "form-control form-control-lg", @placeholder = "Last Name" })
                                </div>
                                <div class="form-group">
                                    @Html.TextBoxFor(t => t.EmailId, new { @class = "form-control form-control-lg", @placeholder = "Email" })
                                    <label id="isExistEmailError" class="custom-error"></label>
                                </div>
                                <div class="form-group">
                                    @Html.TextBox("Password", "", new { @class = "form-control form-control-lg", @type = "password", @placeholder = "New Password" })
                                </div>
                                <div class="form-group">
                                    @Html.TextBox("ConfirmPassword", "", new { @class = "form-control form-control-lg", @type = "password", @placeholder = "Confirm Password" })
                                </div>
                                @*<div class="mb-4">
                                        <div class="form-check">
                                            <label class="form-check-label text-muted">
                                                <input type="checkbox" class="form-check-input">
                                                I agree to all Terms & Conditions
                                            </label>
                                        </div>
                                    </div>*@
                                <div class="mt-3">
                                    <button class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn">SIGN UP</button>
                                </div>
                                <div class="text-center mt-4 font-weight-light">
                                    Already have an account? <a href="~/users/login" class="text-primary">Login</a>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
            <!-- content-wrapper ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>


