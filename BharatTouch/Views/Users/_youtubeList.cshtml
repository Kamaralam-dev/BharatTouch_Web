@model int
@using BharatTouch.CommonHelper
@using DataAccess
@{
    int companyId = BharatTouch.CommonHelper.Utility.GetCookie("CompanyId_auth").ToIntOrZero();
    bool disableCompanyManagedSections = companyId > 0;
    /**/

    var YouTubeList = new DataAccess.Repository.YouTubeRepository().GetAllYouTubes(Model, "BharatTouch/EditProfile/_youtubeList.cshtml").OrderByDescending(x => x.CreatedDate).ToList();
}

@if (YouTubeList.Count > 0)
{
    <input type="hidden" id="hdnYoutubeVideosCount" value="@YouTubeList.Count" />
    foreach (var YouTube in YouTubeList)
    {
        <div class="resume-item">
            <h4 style="text-transform:unset;color:black;"><a href="@YouTube.YouTubeUrl" target="_blank">@YouTube.YouTubeTitle</a> </h4>
            @*<h5>@string.Format("{0:" + BharatTouch.CommonHelper.DateTimeFormatter.Style7 + "}", YouTube.CreatedDate)</h5>*@
            @*<p><em>@YouTube.YouTubeCategory</em></p>*@

            @if (!disableCompanyManagedSections)
            {<p>
                    <a class="edit-youtube" data-id="@YouTube.YouTubeId" style="color:darkblue;cursor:pointer;"><i class="bx bx-edit"></i>&nbsp; Edit</a>
                    &nbsp;|&nbsp;
                    <a class="delete-youtube" data-id="@YouTube.YouTubeId" style="color:darkblue;cursor:pointer;"><i class="bx bx-trash"></i>&nbsp; Delete <span class="lds-dual-ring-blue"></span>&nbsp;</a>
                </p>
            }


        </div>
    }

}
else
{
<div style="margin: 0px 0% 0px -40% !important">
    <input type="hidden" id="hdnYoutubeVideosCount" value="0" />
    @if (disableCompanyManagedSections)
    {
        <h6 style="text-transform: unset; color: red; font-weight: 600;">Company admin has not updated this section </h6>
    }
</div>
}