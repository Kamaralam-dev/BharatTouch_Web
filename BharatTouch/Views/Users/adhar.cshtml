@model DataAccess.ViewModels.ProfileDetail
@using DataAccess
@{
    Layout = null;
    bool isProfilePictureExist = Model.ProfileImage.NullToString() != "";
    var webLinkHttps = isProfilePictureExist ? Model.ProfileImage.NullToString() : "/SmartTheme/images/bharattouchfavico.ico"; //"https://aviecard.com" +
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bharat Touch - Aadhaar Card</title>

    <link rel="icon" href="@webLinkHttps?v=@DateTime.Now.ToString("yyyyMMddHHmmssf")" type="image/x-icon">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
    <link href="~/Content/stylesheets/pageCss/adhaar.css" rel="stylesheet" />
</head>
<body>

    <div class="container-fluid mt-3" style=" margin-left: 1rem;">
        <a href="/" class="logo d-flex align-items-center">
            <img src="~/SmartTheme/images/logo.svg" alt="Bharat Touch Logo" style=" width: 350px; height: auto;">
            @*<span>Avi eCard</span>*@
        </a>
    </div>

    <div class="container py-5">
        <h1 class="text-center mb-5">Aadhaar Card</h1>

        <div class="row g-4">
            <div class="col-md-6">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title mb-3">Front Side</h5>
                        <div class="aadhar-preview">
                            <img src="@Model.AdhaarFrontImgPath"
                                 class="img-fluid aadhar-image"
                                 alt="Aadhar Front Side">
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title mb-3">Back Side</h5>
                        <div class="aadhar-preview">
                            <img src="@Model.AdhaarBackImgPath"
                                 class="img-fluid aadhar-image"
                                 alt="Aadhar Back Side">
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="text-center mt-4">
            <button class="btn btn-primary btn-lg" onclick="window.print()">
                <i class="bi bi-printer me-2"></i>Print Document
            </button>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>