
@{
    Layout = null;
    ViewBag.Title = "Email Verification";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/HomeAssets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/HomeAssets/css/main.css" rel="stylesheet">
    
    <style>
        .logo {
            background: beige;
            text-align: center;
            height: 61px;
        }
        .page-title {
            font-family: sans-serif;
            font-size: x-large;
            text-decoration: underline;
        }
    </style>
</head>
<body>
    <main class="main">
        <!-- Page Title -->
        <div class="page-title">
            <div class="heading">
                <div class="container">
                    <div class="row">
                        <div class="logo text-center">
                            <img src="~/HomeAssets/img/avipdf.jpg" height="60px" width="60px" style="float:left;" />
                            <span class="page-title">@ViewBag.Title</span>
                        </div>
                    </div>
                    <div class="row d-flex justify-content-center text-center">
                        <div class="col-lg-8">
                            @*<h1>@ViewBag.Title</h1>*@
                            @if (Model)
                            {
                                <h5 class="mb-0">Your email is verified successfully!</h5>
                            }
                            else
                            {
                                <h5 class="mb-0">Email is wrong!</h5>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div><!-- End Page Title -->
    </main>

    <script src="~/HomeAssets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/HomeAssets/js/main.js"></script>
</body>
</html>
