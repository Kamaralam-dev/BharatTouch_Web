
@model DataAccess.ViewModels.LeadsViewModel
    @{ 
        var countries = new DataAccess.Repository.CountryRepository().GetCountries("BharatTouch/Profile/Profile.cshtml").Select(n => new SelectListItem()
        {
            Text = n.Country + " (" + n.NumberCode + ")",
            Value = n.NumberCode + ";" + n.MinNumberLength + ";" + n.MaxNumberLength
        });
    }

<div class="modal fade" id="MeetingRequestFormModel" tabindex="-1" aria-labelledby="meetingRequestFormModelLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="meetingRequestFormModelLabel">Send Meeting Request</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("SendMeetingRequest", "Users", FormMethod.Post, new { id = "meetingRequestForm", @class = "php-email-form" }))
                {
                    @Html.HiddenFor(t => t.LeadId)
                    @Html.HiddenFor(t => t.LeadTypeId)
                    @Html.HiddenFor(t => t.Date)
                    @Html.HiddenFor(t => t.UserId)
                    <div class="row">
                        <div class="form-row col-lg-12">
                            <div class="form-group col-lg-6">
                                <label for="Name"><span style="color:red;">*</span>Name</label>
                                @Html.TextBoxFor(t => t.Name, new { @class = "form-control required-left", @placeholder = "" })
                            </div>
                            <div class="form-group col-lg-6">
                                <label for="Email"><span style="color:red;">*</span>Email</label>
                                @Html.TextBoxFor(t => t.Email, new { @class = "form-control required-left", @type = "email", @placeholder = "" })
                            </div>
                        </div>
                        <div class="form-row col-lg-12">
                            <div class="form-group col-md-6">
                                <label for="PhoneNo"><span class="required">*</span>Country Code</label>
                                @Html.DropDownList("MeetingCountryCode", countries, "Select Country Code", new { @class = "form-control", @id = "ddlMeetingCountryCode" })
                                <div class="validate"></div>
                            </div>
                            <div class="form-group col-md-6">
                                <label for="PhoneNo"><span class="required">*</span>Your Phone</label>
                                @Html.TextBoxFor(t => t.PhoneNo, new { @class = "form-control required-left", @type = "number", @placeholder = "" })
                                <div class="validate"></div>
                            </div>
                        </div>
                        <div class="form-row col-lg-12">
                            <div class="form-group col-md-12">
                                <label for="Message"><span style="color:red;">*</span>Message</label>
                                @Html.TextAreaFor(t => t.Message, new { @class = "form-control required-left", @placeholder = "", rows = "4" })
                            </div>
                        </div>
                        <div class="form-row col-md-12">
                            <div id="grecaptchaSendEmailMeetingRequest"></div>
                            <input type="hidden" name="hdngrecaptchaResponseMeetingRequestForm" id="hdngrecaptchaResponseMeetingRequestForm" value="" />
                        </div>
                    </div>
                 }
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" id="btnSubmitMeetingRequestForm" class="btn btn-danger"> <div class="lds-dual-ring"></div>&nbsp;Submit</button>
            </div>
        </div>
    </div>
</div>
