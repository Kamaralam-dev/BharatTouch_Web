@model DataAccess.Models.UserModel
@using BharatTouch.CommonHelper
@{
    //Layout = null;
    ViewBag.Title = "Sign Up";

    var planList = new DataAccess.Repository.PackagesRepository().GetAllPackages();
    if(planList.Count > 0)
    {
        planList = planList.OrderByDescending(p => p.PackageId).ToList();
    }
    var packageSelectList = new SelectList(planList.Select(p => new
    {
        PackageId = p.PackageId,
        PackageName = p.PackageName + " (Rs. " + p.PackageCost + ")"
    }), "PackageId", "PackageName");
}

<div class="modal fade" id="SignupModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Sign up</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("Create", "Users", FormMethod.Post, new { id = "CreateUserForm", @class = "php-email-form" }))
                {

                    @*<div class="form-row">
                        <div class="form-group col-md-12">
                            <label for="UserType">&nbsp;</label>
                            <select name="UserType" id="UserType" class="form-select">
                                <option value="">Choose Type</option>
                                <option value="IN">Individual / Freelancer</option>
                                <option value="BO">Business Owner</option>
                                <option value="SP">Service Provider</option>
                                <option value="HR">Hotel / Restaurant</option>
                            </select>
                        </div>
                    </div>*@
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <label for="FirstName">&nbsp;</label>
                            @Html.TextBoxFor(t => t.FirstName, new { @class = "form-control", @placeholder = "First Name" })
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <label for="LastName">&nbsp;</label>
                            @Html.TextBoxFor(t => t.LastName, new { @class = "form-control", @placeholder = "Last Name" })
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <label for="Displayname">&nbsp;</label>
                            @Html.TextBoxFor(t => t.Displayname, new { @class = "form-control", @placeholder = "Display Name" })
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <label for="EmailId">&nbsp;</label>
                            @Html.TextBoxFor(t => t.EmailId, new { @class = "form-control", @placeholder = "Email" })
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <label for="Password">&nbsp;</label>
                            @Html.TextBox("Password", "", new { @class = "form-control", @type = "password", @id = "txtRegPassword", @placeholder = "Password" })
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <label for="ConfirmPassword">&nbsp;</label>
                            @Html.TextBox("ConfirmPassword", "", new { @class = "form-control", @type = "password", @id = "txtRegConfirmPassword", @placeholder = "Confirm Password" })
                        </div>
                    </div>  
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <label for="PackageId">&nbsp;</label>
                            @Html.DropDownListFor(x => x.PackageId, packageSelectList, new { @class = "form-select" })
                        </div>
                    </div>                    
                    <div class="form-row my-4">
                        <div class="form-group col-md-12">
                            @Html.TextBoxFor(x => x.ReferredByCode, "", new { @class = "form-control", @placeholder = "Referal Code" })
                            <div class="error" id="invalidReferalCode"></div>
                        </div>
                    </div>
                    <div class="form-row my-4">
                        <div class="col-md-12">
                            <div id="grecaptchaSignup"></div>
                            <input type="hidden" name="hdngrecaptchaResponseSignup" id="hdngrecaptchaResponseSignup" value="" />
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-md-12">
                            <div class="form-group  d-flex">
                                <input type="checkbox" name="chkPolicy" id="chkPolicy" class="form-check  mb-5 mx-2" required />
                                <label>I have read and agree the <a class="underline" id="termsOfServices_link" style="cursor: pointer;">Terms of Services</a> and the <a class="underline" id="privacyPolicy_link" style="cursor: pointer;">Privacy Policy.</a></label>
                            </div>
                        </div>
                    </div>
                    <div class="form-row clearfix">
                        <button type="submit" id="btnSubmitSignUp" class="btn btn-orange w-100 float-end mt-3"><div class="lds-dual-ring"></div>&nbsp;SIGN UP</button>
                    </div>
                    @*<div class="form-row clearfix">
                        <div class="d-flex align-items-center">
                            <div class="flex-grow-1"><hr></div>
                            <div class="mx-2">OR</div>
                            <div class="flex-grow-1"><hr></div>
                        </div>
                    </div>                    
                    <div class="form-row clearfix">
                        <button type="button" class="btn btn-danger btnSigninWithGoogle w-100"><i class="bi bi-google" style="margin-right: 10px;"></i>Signin With Google</button>
                    </div>                    
                    <div class="form-row clearfix">
                        <button type="button" class="btn text-white btnSigninWithMicrosoft w-100 mt-2" style="background-color: darkslateblue;"><i class="bi bi-microsoft" style="margin-right: 10px;"></i>Signin With Microsoft</button>
                    </div>*@
                    <div class="text-center mt-4 font-weight-light">
                        Already have an account? <a href="javascript:void(0)" id="btnLogin_SignUp" class="text-primary">Login</a>
                    </div>
                }
            </div>
            <div class="modal-footer">
                <div class="my-2 d-flex justify-content-between align-items-center">
                    <a href="javascript:void(0)" id="btnForgotPassword_Signup" style="cursor:pointer;" class="auth-link text-black">Forgot password?</a>
                    @*<a href="javascript:void(0)" style="cursor:pointer;" class="auth-link text-black btnForgotPassword_Signup">Forgot password?</a>*@
                </div>
            </div>
        </div>
    </div>
</div>





