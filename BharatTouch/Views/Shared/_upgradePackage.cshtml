@model DataAccess.ViewModels.UserPackageViewModel
@using DataAccess
@{
    var packages = new DataAccess.Repository.PackagesRepository().GetAllPackages();
    var studentPlan = new DataAccess.ViewModels.UserPackageViewModel();
    var basicPlan = new DataAccess.ViewModels.UserPackageViewModel();
    var premiumPlan = new DataAccess.ViewModels.UserPackageViewModel();
    var ultimatePlan = new DataAccess.ViewModels.UserPackageViewModel();
    if(packages.Count > 0)
    {
        studentPlan = packages.FirstOrDefault(x => x.PackageId == 1);
        basicPlan = packages.FirstOrDefault(x => x.PackageId == 2);
        premiumPlan = packages.FirstOrDefault(x => x.PackageId == 3);
        ultimatePlan = packages.FirstOrDefault(x => x.PackageId == 4);
