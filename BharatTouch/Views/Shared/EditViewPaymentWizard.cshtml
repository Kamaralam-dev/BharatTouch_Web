@model bool

<div class="modal fade" id="paymentWizardModal" tabindex="-1" aria-labelledby="paymentWizardModalLabel" aria-hidden="true">
    <style>
        .no-before-radio::before {
            display: none !important;
            content: none !important;
        }
        .no-before-radio::after {
            display: none !important;
            content: none !important;
        }
    </style>
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header" style="background-color: #18181A;">
                <h5 class="modal-title" id="paymentWizardModalLabel" style=" color: white !important;">Order NFC Card</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" style="background-color: white;"></button>
            </div>
            <div class="modal-body" style="background-color: #18181A;">

                <section class="singup-form-outer">
                    <div class=""> @*container*@
                        <div class="get-started-text" style="display: none;">
                            <h1 class="title-44">Complete your pending order</h1>
                            <p style=" color: white;">Create your account, customize your card, and place your order in just a few easy steps. Secure, personalized, and designed to grow your digital identity.</p>
                        </div>
                        <div class="step-form-outer">
                            <div class="step-points">
                                <div class="step-points-inner">
                                    <div class="step-point active" data-step="card-options">
                                        <span class="step-image">
                                            <img src="~/SmartTheme/images/card-options.svg">
                                        </span>
                                        <i>Card Options</i>
                                        <span class="progress-line">
                                    </div>
                                    <div class="step-point" data-step="business-info">
                                        <span class="step-image">
                                            <img src="~/SmartTheme/images/business-info.svg">
                                        </span>
                                        <i>Business Info</i>
                                        <span class="progress-line">
                                    </div>
                                    <div class="step-point" data-step="shipping-billing">
                                        <span class="step-image">
                                            <img src="~/SmartTheme/images/shipping.svg">
                                        </span>
                                        <i>Shipping & Billing</i>
                                        <span class="progress-line">
                                    </div>
                                    <div class="step-point" data-step="finish">
                                        <span class="step-image">
                                            <img src="~/SmartTheme/images/finish.svg">
                                        </span>
                                        <i>Complete Order</i>
                                        <span class="progress-line">
                                    </div>
                                </div>
                            </div>
                            <div class="sign-up-form">
                                <!-- Choose Your Card Style -->

                                <div id="card-options" class="form-step  active-step">
                                    <h2>Choose Your Card Style</h2>
                                    <form>
                                        <div class="row">
                                            <div class="col-md-6 card-boxes zero-padding-phone">
                                                <h3>1. Choose Color </h3>
                                                <div class="select-cards">
                                                    <div class="select-cards-inner">
                                                        @*<input type="radio" name="choose-color" checked value="2">*@
                                                        <input type="radio" name="CardColorId" data-color="Gold" data-bg-color="#e8d087" data-txt-color="#000000" checked value="2">
                                                        <div class="checkbox-card">
                                                            <p>
                                                                <img src="~/SmartTheme/images/gold-card.png">
                                                            </p>
                                                            <span>Gold</span>
                                                        </div>
                                                    </div>
                                                    <div class="select-cards-inner">
                                                        <input type="radio" name="CardColorId" data-color="Silver" data-bg-color="#e4e4e2" data-txt-color="#000000" value="3">
                                                        <div class="checkbox-card">
                                                            <p>
                                                                <img src="~/SmartTheme/images/white-card.png">
                                                            </p>
                                                            <span>Silver</span>
                                                        </div>
                                                    </div>
                                                    <div class="select-cards-inner">
                                                        <input type="radio" name="CardColorId" data-color="Black" data-bg-color="#000000" data-txt-color="#ffffff" value="1">
                                                        <div class="checkbox-card">
                                                            <p>
                                                                <img src="~/SmartTheme/images/black-card.png">
                                                            </p>
                                                            <span>Black</span>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-6 card-boxes zero-padding-phone">
                                                <h3>2. Pick Your Card Finish</h3>
                                                <div class="select-cards" style=" display: block; line-height: 2;">
                                                    <div class="select-cards-inner">
                                                        <input type="radio" name="CardFinishId" data-finish-name="Glossy Finish" value="2">
                                                        <div class="checkbox-card">
                                                            @*<p>
                                                <img src="~/SmartTheme/images/gold-card.png">
                                            </p>*@
                                                            <span>Glossy Finish</span>
                                                        </div>
                                                    </div>
                                                    <div class="select-cards-inner">
                                                        @*<input type="radio" name="pick-card" checked>*@
                                                        <input type="radio" name="CardFinishId" data-finish-name="Matte Finish" checked value="1">
                                                        <div class="checkbox-card">
                                                            @*<p>
                                                <img src="~/SmartTheme/images/gold-card.png">
                                            </p>*@
                                                            <span>Matte Finish</span>
                                                        </div>
                                                    </div>
                                                    <div class="select-cards-inner">
                                                        <input type="radio" name="CardFinishId" data-finish-name="Clear Finish" value="3">
                                                        <div class="checkbox-card">
                                                            @*<p>
                                                <img src="~/SmartTheme/images/gold-card.png">
                                            </p>*@
                                                            <span>Clear Finish</span>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="card-material">
                                                    @*<h3>3. Add a premium metal NFC card along with the plastic card (+₹ 2,999.00).</h3>
                                                    <div class="card-material-checkbox">
                                                        <input type="checkbox" name="card-material" id="metal-card">
                                                        <input type="checkbox" name="card-material" id="IncludeMetalCard">
                                                        <label for="IncludeMetalCard" style=" width: max-content;"><span class="card-checkmark"></span>Yes, include a metal NFC card.</label>
                                                    </div>*@
                                                    <h3>3. Pick Your Card Type</h3>
                                                    <div>
                                                        <div class="select-cards-inner" style="margin-bottom: 8px;">
                                                            <input type="radio" name="CardTypeId" data-type="PVC Card" data-price="@(Model ? "999": "1999")" checked value="1">
                                                            <div class="checkbox-card">
                                                                <span>PVC Card - Rs.@(Model ? "999": "1999")</span>
                                                            </div>
                                                        </div>
                                                        <div class="select-cards-inner" style="margin-bottom: 8px;">
                                                            <input type="radio" name="CardTypeId" data-type="Metal Card" data-price="@(Model ? "2499": "3499")" value="2">
                                                            <div class="checkbox-card">
                                                                <span>Metal Card - Rs.@(Model ? "2499": "3499")</span>
                                                            </div>
                                                        </div>

                                                        <div class="select-cards-inner" style="margin-bottom: 8px;">
                                                            <input type="radio" name="CardTypeId" data-type="Combo Card" data-price="@(Model ? "2999" : "4499")" value="3">
                                                            <div class="checkbox-card">
                                                            <span style="color: #9ea2a2; margin-bottom: 1px;">Combo (Metal + PVC) - <span class="no-before-radio" style="padding-left: 0; text-decoration: line-through;">Rs.@(Model ? "3499" : "5499")</span> Rs.@(Model ? "2999" : "4499")</span>
                                                                @*<span></span>*@
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                    </form>
                                </div>
                                <div class="bottom-btns">
                                    @*<a href="#" class="btn-grey back">Back</a>*@
                                    <a id="btnNextSelectNfc" href="javascript:void(0)" class="btn-gradient next">Next</a>
                                </div>
                            </div>

                            <!-- Tell Us About Your Business -->
                            <div id="business-info" class="form-step">
                                <h2>Tell Us About Your Business</h2>
                                <form id="nfcCardDetailForm">
                                    <div class="row">
                                        <div class="col-md-7 choosen-card-outer">
                                            <p>Choosen Card Details:</p>
                                            <div class="choosen-card">
                                                <div class="choosen-card-img">
                                                    @*<img src="~/SmartTheme/images/gold-card.png" alt="gold-card">*@
                                                    @Html.Partial("_nfcCardPreview", new DataAccess.ViewModels.NfcCardColorViewModel())
                                                </div>
                                                <div class="choosen-card-info">
                                                    <p id="choosenCardColor"><span>Card Color</span>Gold</p>
                                                    <p id="choosenCardFinish"><span>Card Finish</span>Glossy</p>
                                                    <p id="choosenCardMaterial"><span>Card Material</span>NFC Metal Card</p>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-5 choose-card-detail">
                                            <div class="mb-2">
                                                <label>Your Name / Business Name</label>
                                                <input type="text" id="NfcCardLine1" required placeholder="Your Name / Business Name">
                                            </div>
                                            <div class="mb-2">
                                                <label>Designation / Business Name</label>
                                                <input type="text" id="NfcCardLine2" placeholder="Designation / Business Name">
                                            </div>
                                            <div class="mb-2">
                                                <label>Business Name / Phone Number</label>
                                                <input type="text" id="NfcCardLine3" placeholder="Business Name / Phone Number">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="bottom-btns">
                                        <a href="#" class="btn-grey back">Back</a>
                                        <button type="submit" class="btn-gradient next">Next</button>
                                    </div>
                                </form>
                            </div>


                            <!-- Billing & Shipping Details -->

