@model int
@using DataAccess
@{
    var packages = new DataAccess.Repository.PackagesRepository().GetAllPackages();
    var studentPlan = new DataAccess.ViewModels.UserPackageViewModel();
    var basicPlan = new DataAccess.ViewModels.UserPackageViewModel();
    var premiumPlan = new DataAccess.ViewModels.UserPackageViewModel();
    var ultimatePlan = new DataAccess.ViewModels.UserPackageViewModel();
    if (packages.Count > 0)
    {
        studentPlan = packages.FirstOrDefault(x => x.PackageId == 1);
        basicPlan = packages.FirstOrDefault(x => x.PackageId == 2);
        premiumPlan = packages.FirstOrDefault(x => x.PackageId == 3);
        ultimatePlan = packages.FirstOrDefault(x => x.PackageId == 4);
    }

}

<div class="pricing mainPricing mt-3">
    @if (Model == 1)
    {
        <div class="col-md-12">
            <div class="box" style="padding: 0 0 25px 0 !important;">
                <span class="featured">Students</span>
                <h3 style="color: #07d5c0; color: #ffffff; background: #febe77; padding: 39px 0px 39px 0; text-transform: uppercase; font-size: 24px !important;">@(studentPlan.PackageName.NullToString() != "" ? studentPlan.PackageName : "Students Plan")</h3>
                <div class="price"><sup>INR</sup>@(studentPlan.PackageCost != 0 ? Convert.ToInt32(studentPlan.PackageCost) : 499)<span> / yr</span></div>
                <a href="#" class="btn-buy" id="btnUpgradePackage" style="background: #febe77 !important; color: white; border: 1px solid white;"> Change Plan</a>
            </div>
        </div>
    }

    @if (Model == 2)
    {
        <div class="col-md-12">
            <div class="box" style="padding: 0 0 25px 0 !important;">

                <h3 style="color: #ffffff; background: #47d6e8; padding: 39px 0px 39px 0; text-transform: uppercase; font-size: 24px !important; ">@(basicPlan.PackageName.NullToString() != "" ? basicPlan.PackageName : "Basic Plan")</h3>
                <div class="price"><sup>INR</sup>@(basicPlan.PackageCost != 0 ? Convert.ToInt32(basicPlan.PackageCost) : 999)<span> / yr</span></div>
                <a href="#" class="btn-buy" id="btnUpgradePackage" style="background: #47d6e8 !important; color: white; border: 1px solid white;">Change Plan</a>
            </div>
        </div>
    }


    @if (Model == 3)
    {
        <div class="col-md-12">
            <div class="box" style="padding: 0 0 25px 0 !important;">
                <span class="featured">Featured</span>
                <h3 style="color: #ffffff; background: #ff679f; padding: 39px 0px 39px 0; text-transform: uppercase; font-size: 24px !important; ">@(premiumPlan.PackageName.NullToString() != "" ? premiumPlan.PackageName : "Premium Plan")</h3>
                <div class="price"><sup>INR</sup>@(premiumPlan.PackageCost != 0 ? Convert.ToInt32(premiumPlan.PackageCost) : 2499)<span> / yr</span></div>
                <a href="#" class="btn-buy" id="btnUpgradePackage" style="background: #ff679f !important; color: white; border: 1px solid white;">Change Plan</a>
            </div>
        </div>
    }

    @if (Model == 4)
    {
        <div class="col-md-12">
            <div class="box" style="padding: 0 0 25px 0 !important;">
                <h3 style="color: #ffffff; background: #8adba7; padding: 39px 0px 39px 0; text-transform: uppercase; font-size: 24px !important; ">@(ultimatePlan.PackageName.NullToString() != "" ? ultimatePlan.PackageName : "Ultimate Plan")</h3>
                <div class="price"><sup>INR</sup>@(ultimatePlan.PackageCost != 0 ? Convert.ToInt32(ultimatePlan.PackageCost) : 4999)<span> / yr</span></div>
                <a href="#" class="btn-buy" id="btnUpgradePackage" style="background: #8adba7 !important; color: white; border: 1px solid white; ">Change Plan</a>
            </div>
        </div>
    }
</div>
