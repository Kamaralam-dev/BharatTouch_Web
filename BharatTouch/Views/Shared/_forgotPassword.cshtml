@model DataAccess.Models.UserModel
@{
    //Layout = null;
    ViewBag.Title = "Login";
    var newdt = System.DateTime.Now.ToString("MMddyyyyhhmmss");
}

<div class="modal fade" id="ForgotPasswordModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Recover Password</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                    @using (Html.BeginForm("ForgotPassword", "Users", FormMethod.Post, new { id = "ForgotPasswordForm", @class = "php-email-form" }))
                    {
                        <div class="form-row">
                            <div class="form-group col-md-12">
                                <label for="name">&nbsp;</label>
                                <input name="emailid" type="email" placeholder="Email" class="form-control" />
                            </div>
                        </div>
                        <div class="form-row clearfix">          
                            <input type="hidden" name="pageName" id="pageName" value="Forget Password Modal"/>
                            <button type="submit" id="btnResetPassword" class="btn btn-primary float-end mt-3"><div class="lds-dual-ring"></div> &nbsp;Reset!</button>
                        </div>
                    }
            </div>
            @*<div class="modal-footer">
                <div class="my-2 d-flex justify-content-between align-items-center">
                    <a id="btnForgotPassword_Login" class="auth-link text-black">Forgot password?</a>
                </div>
            </div>*@
        </div>
    </div>
</div>

