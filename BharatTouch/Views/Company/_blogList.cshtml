
@model int
@{
    var blogList = new DataAccess.Repository.BlogRepository().GetAllBlogs(Model, "BharatTouch/CompanyIndex/_blogList.cshtml").OrderByDescending(x => x.CreatedDate).ToList();
}

@if (blogList.Count > 0)
{

    foreach (var blog in blogList)
    {
        <div class="resume-item">
            <h4 style="text-transform:unset;color:black;"><a href="@blog.BlogUrl" target="_blank">@blog.BlogTitle</a> </h4>
            <p><em>@blog.BlogCategory</em></p>

            <p>
                <a class="edit-blog" data-id="@blog.BlogId" style="color:darkblue;cursor:pointer;"><i class="bx bx-edit"></i>&nbsp; Edit</a>
                &nbsp;|&nbsp;
                <a class="delete-blog" data-id="@blog.BlogId" style="color:darkblue;cursor:pointer;"><i class="bx bx-trash"></i>&nbsp; Delete <span class="lds-dual-ring-blue"></span>&nbsp;</a>
            </p>

        </div>
    }

}
