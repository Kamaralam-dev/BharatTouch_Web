@model IEnumerable<DataAccess.ViewModels.BT_BlogViewModel>
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>BharatTouch Blog</title>
    <link rel="icon" href="/SmartTheme/images/bharattouchfavico.ico" type="image/x-icon">
    <style>
        :root {
            --primary-color: #e96115;
            --secondary-color: #1d9a6c;
            --background-color: #fff;
            --text-color: #222;
            --light-gray: #f5f5f5;
        }

        body {
            font-family: 'Segoe UI', sans-serif;
            margin: 0;
            background: var(--light-gray);
            color: var(--text-color);
        }

        header {
            background-color: #000000;
            color: var(--secondary-color);
            padding: 20px 0 4px 0;
            text-align: center;
            border-bottom: 4px solid var(--primary-color);
        }

            header img {
                height: 40px;
                display: block;
                margin: 0 auto 10px;
            }

        .container {
            max-width: 1200px;
            margin: 30px auto;
            padding: 20px;
            background: var(--background-color);
            border-radius: 10px;
        }

        .blog-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 20px;
        }

        .blog-card {
            border: 1px solid #eee;
            border-radius: 10px;
            background: #fafafa;
            overflow: hidden;
            display: flex;
            flex-direction: column;
        }

            .blog-card img {
                width: 100%;
                height: 180px;
                object-fit: fill;
            }

        .blog-content {
            padding: 15px;
            flex: 1;
            display: flex;
            flex-direction: column;
        }

        .blog-card h2 {
            color: var(--primary-color);
            margin: 0 0 10px 0;
            font-size: 20px;
        }

        .blog-card p {
            color: var(--secondary-color);
            margin: 0 0 10px 0;
            font-size: 14px;
            flex-grow: 1;
        }

        .blog-card a {
            margin-top: auto;
            text-decoration: none;
            color: var(--primary-color);
            font-weight: bold;
        }

        footer {
            text-align: center;
            padding: 20px;
            font-size: 0.9em;
            color: #666;
        }
    </style>
</head>
<body>
    <header>
       
      <a href="/">  <img src="/SmartTheme/images/logo.svg" alt="BharatTouch Logo" /></a>
        <h1>Welcome to the <span style="color:#e96115">Bharat</span>Touch Blog</h1>
       
    </header>

    <div class="container">
        <div class="blog-grid">
            @if (Model != null && Model.Any())
            {
                foreach (var i in Model)
                {
                    var slugTitle = BharatTouch.CommonHelper.Utility.GenerateSlug(i.BlogTitle);
                    var imagePath = BharatTouch.CommonHelper.ConfigValues.ImagePath.Substring(1) + "/BT_Blog/" + i.BlogId + ".png";


                    <div class="blog-card">
                        
                        <img src="@imagePath" alt="@i.BlogTitle" />
                        <div class="blog-content">
                            <h2>@i.BlogTitle</h2>
                            <p>@i.BlogTagLine</p>
                            <a href="@Url.RouteUrl("BlogDetails", new { slug = slugTitle })">Read More →</a>
                        </div>
                    </div>
                }
            }
        </div>
    </div>

    <footer>
        © 2025 BharatTouch. All rights reserved.
    </footer>
</body>
</html>
