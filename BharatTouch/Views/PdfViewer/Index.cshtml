@using DataAccess
@{
    Layout = null;

    var UserUrlCode = BharatTouch.CommonHelper.Utility.GetCookie("UserUrlCode").NullToString();

}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <link rel="stylesheet" href="css/style.css" />
    @*<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.2/css/all.css" integrity="sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr" crossorigin="anonymous" />*@
    <title>View</title>
    <style>
        #pdf-viewer {
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.1);
            overflow: auto;
        }

        .pdf-page-canvas {
            display: block;
            margin: 5px auto;
            border: 1px solid rgba(0, 0, 0, 0.2);
        }
        #pdf-render {
        width:100%!important;

        }
    </style>
</head>
<body>
    <input type="hidden" name="pdfpath" id="pdfpath" value="@ViewBag.pdfpath" />
    <div class="top-bar m-3">
        <a target="_self" href="/@UserUrlCode" class="btn btn-sm btn-primary"><i class="fa fa-arrow-left"></i> View Profile</a>
        <button class="btn btn-outline-primary btn-sm" id="prev-page">
            <i class="fa fa-arrow-circle-left"></i> Prev Page
        </button>
        <button class="btn btn-outline-primary btn-sm" id="next-page">
            Next Page <i class="fa fa-arrow-circle-right"></i>
        </button>
        <span class="page-info">
            Page <span id="page-num"></span> of <span id="page-count"></span>
        </span>
    </div>

    <div class="container" id="canvascontainer">
            <canvas class="col-12" id="pdf-render"></canvas>
        </div>
    @*<div id='pdf-viewer'></div>*@

  
    @*<script src="~/Content/javascripts/PDFViewer/scrollablePdf.js"></script>*@
    <script src="~/Content/javascripts/PDFViewer/PdfViewer.js"></script>

</body>
</html>
